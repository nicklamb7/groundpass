<div id="facilities-show-page">
  <p id="notice"><%= notice %></p>
  <div class="facility-name">
    <%= link_to "#{@facility.organisation.name}", organisation_path(@facility.organisation_id) %>
    <h2>
      <%= @facility.name %>
    </h2>
  </div>
  <div>
    <p>
      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
      </svg>
      <%= @facility.rating %>
       ·
      <%= @facility.address %>
    </p>
  </div>
  <div class="row">
    <div class="col-8">
      <div class="image-wrapper"  style="background-image: url('<%= cl_image_path @facility.photo.key, height: 800, crop: :fill if @facility.photo.attached? %>')">
        <img src="" alt="">
      </div>
      <p>
        £<%= @facility.price %>
      </p>
      <strong>Facility type:</strong><%= @facility.facility_type %>
      <p>
        <%= @facility.summary %>
      </p>
      <p>
        <strong>Facility type:</strong>
        <%= @facility.facility_type %>
      </p>
    </div>
    <div class="col-4">
      <div class="facility-date-container">
        <h3>
          Select a date
        </h3>
        <div>
          <p>
            Check-in
          </p>
          <input type="date" placeholder="Add date">
        </div>
        <button disabled >
          Book
        </button>
      </div>
    </div>
  </div>
  <%= link_to 'Edit', edit_organisation_facility_path(organisation_id: @facility.organisation_id, facility_id: @facility.id)  %> |
  <%= link_to 'Back', facilities_path %>
</>
