<p id="notice"><%= notice %></p>

<h1>Facilities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Rating</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Price</th>
      <th>Summary</th>
      <th>Facility type</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td><%= facility.name %></td>
        <td><%= facility.address %></td>
        <td><%= facility.rating %></td>
        <td><%= facility.latitude %></td>
        <td><%= facility.longitude %></td>
        <td><%= facility.price %></td>
        <td><%= facility.summary %></td>
        <td><%= facility.facility_type %></td>
        <td><%= facility.user_id %></td>
        <td><%= link_to 'Show', facility %></td>
        <td><%= link_to 'Edit', edit_facility_path(facility) %></td>
        <td><%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

